/* stylesheet.css for FriedDocument

   by Peter Bengtsson, 2004, Fry-IT Ltd
   www.fry-it.com
*/
body {
  margin:0;
  padding:0;
  background: white; color: black;
  font:1em Arial, sans-serif, verdana;
}

#slotswitcher {
  background-color:#fff;
  position:absolute;
  top:50px;
  right:30px;
  font-family:sans-serif;
  font-size:11px;
  border:1px solid #ccc;
  padding:5px;
}
#slotswitcher ul { list-style:none; margin:0;margin-left:6px; padding:0; }
li.on { font-size:12px; font-weight:bold;}

